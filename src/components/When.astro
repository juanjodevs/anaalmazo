                <path d="M12 6l-3.293 3.293a1 1 0 0 0 0 1.414l.543 .543c.69 .69 1.81 .69 2.5 0l1 -1a3.182 3.182 0 0 1 4.5 0l2.25 2.25"></path>
                <path d="M12.5 15.5l2 2"></path>
                <path d="M15 13l2 2"></path>
            </svg>
        </Card>
        <Card
            title="Sufrimiento"
            description="Cuando el sufrimiento interior nos impiden llevar una vida tranquila y plena."
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="m-auto" width="100" height="100" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M7 18a4.6 4.4 0 0 1 0 -9a5 4.5 0 0 1 11 2h1a3.5 3.5 0 0 1 0 7h-1"></path>
